{{!< default}}
{{#post}}
{{> header_inner}}

<main class="main" role="main">
<hr class="pause {{#if image}}remove{{/if}}" />

    <article class="article">
        <header class="postheader">
            <ul>
                <li><time class="date">{{date format='dddd DD MMM YYYY'}}</time></li>
                    {{#if tags}}
                <li class="posttags">{{tags  separator=" | "}}</li>
                    {{/if}}

            </ul>
            <h1 class="posttitle">{{title}}</h1>
        </header>

        <div class="postcontent">
            {{content}}
        </div>

        <div class="back">
            <p class="go-back"><a class="fa fa-long-arrow-left" href="{{@blog.url}}"><span>Back</span></a></p>
            <p class="nav"><a class="fa fa-long-arrow-up" href="{{post}}"><span>Back to top</span></a></p>
        </div>

        {{#if author}}
        <footer class="postfooter">
            {{! <address> }}
            {{#if author.image}}
                <div class="authorimage" style="background-image: url({{author.image}})"></div>
            {{/if}}
            <div class="author">
                <ul>
                    <li><h4 class="authorname"><a href="{{@blog.url}}/author/{{author.slug}}">{{author.name}}</a></h4></li>
                    {{#if author.location}}
                    <li><h5 class="authordata">{{author.location}}</h5></li>
                    {{/if}}
                    {{#if author.website}}
                    <li><h5 class="authordata"><a href="{{author.website}}">{{author.website}}</a></h5></li>
                    {{/if}}
                </ul>
                <p class="authorbio">{{author.bio}}</p>
            </div>
            <!--section class="sharepost">
                <h4>Share this:</h4>
                <a class="fa fa-twitter-square" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidden">Twitter</span></a>
                <a class="fa fa-facebook-square" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidden">Facebook</span></a>
                <a class="fa fa-google-plus-square" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidden">Google+</span></a>
            </section-->
        </footer>
        {{/if}}
    </article>

    <div class="disqusbox">
        <div id="disqus_thread"></div>
        <script>
            var disqus_shortname = 'nnfrontend';
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <style media="print">.disqusbox{display:none}</style>
    </div>
{{/post}}
</main>

{{> footer}}
